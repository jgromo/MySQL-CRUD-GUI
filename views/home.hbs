<div class="row">
  <div class="col-6"><h1>Authors Table</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addauthor" type="button" class="btn btn-primary align-self-center">+ Add Data</a>
  </div>
</div>

{{#if authors}}
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">auID</th>
      <th scope="col">aName</th>
      <th scope="col">email</th>
      <th scope="col">phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each authors}}
    <tr>
      <th scope="row">{{this.auID}}</th>
      <td>{{this.aName}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        <a href="/editauthor/{{this.auID}}"  type="button" class="btn btn-warning btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="/{{this.auID}}" type="button" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>No authors found.</p>
{{/if}}

