{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<form class="row g-3 needs-validation" method="POST" action="/addsubject" novalidate>

  <div class="mb-3">
    <input class="form-control" type="text" placeholder="subID" aria-label="default input example" name="subID">
  </div>

  <div class="mb-3">
    <input class="form-control" type="text" placeholder="sName" aria-label="default input example" name="sName">
  </div>

  <div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>

</form>